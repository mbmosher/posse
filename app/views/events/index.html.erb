<h1>My Confirmed Events</h1>

<p>
<%= link_to 'Back', welcome_index_path, class: "btn"  %> <%= link_to 'Past Events', pastevents_path, class: 'btn' %>
</p>

<table class="table table-striped">
  <tr>
    <th>Event</th>
    <th>Group</th>
    <th>Date</th>
	<th>Time</th>
	<th>Location</th>
  </tr>
 
  <% @myevents.each do |rsvp| %>
    <tr>
	      <td><%= link_to rsvp.event.title, group_event_path(rsvp.event.group_id, rsvp.event) %></td>
	      <td><%= link_to rsvp.event.group.name, group_path(rsvp.event.group) %></td>
	      <td><%= rsvp.event.date %></td>
		  <td><%= rsvp.event.time %></td>
		  <td><%= rsvp.event.location %></td>
    </tr>
  <% end %>

</table>

